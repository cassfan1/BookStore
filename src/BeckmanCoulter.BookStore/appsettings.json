{
  "ConnectionStrings": {
    "DefaultConnection": "Server=(localdb)\\mssqllocaldb;Database=BeckmanCoulter.BookStore;Trusted_Connection=True;MultipleActiveResultSets=true",
    "SqliteConnection": "Data Source=./DB/BookStore.db"
  },
  "AllowedHosts": "*",
  "AzureAd": {
    "Instance": "https://login.microsoftonline.com/",
    "Domain": "azureadinvestigation.onmicrosoft.com",
    "TenantId": "ce058711-d5e7-4b03-befe-7c2d65982904",
    "ClientId": "7634401c-fbed-40f3-a4db-3d9e6a2953f6",
    "CallbackPath": "/signin-oidc"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Debug"
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "RollingFile",
        "Args": {
          "pathFormat": "./Logs/log-{Date}.txt",
          "retainedFileCountLimit": 100,
          "restrictedToMinimumLevel": "Debug",
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level}] [{SourceContext}] [{Application}/{MachineName}] {LogId} {Message}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName" ],
    "Properties": {
      "Application": "BookStore"
    }
  }
}
