{
  "ConnectionStrings": {
    "DefaultConnection": "secret",
    "SqliteConnection": "secret"
  },
  "AllowedHosts": "*",
  "AzureAd": {
    "Instance": "https://login.microsoftonline.com/",
    "Domain": "azureadinvestigation.onmicrosoft.com",
    "TenantId": "secret",
    "ClientId": "secret",
    "CallbackPath": "/signin-oidc"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Debug"
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "RollingFile",
        "Args": {
          "pathFormat": "./Logs/log-{Date}.txt",
          "retainedFileCountLimit": 100,
          "restrictedToMinimumLevel": "Debug",
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level}] [{SourceContext}] [{Application}/{MachineName}] {LogId} {Message}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName" ],
    "Properties": {
      "Application": "BookStore"
    }
  },

  "App": {
    "Name": "Book Store",
    "Version": "v1",
    "ServiceBus": {
      "ConnectionString": "secret",
      "QueueName": "BookStore"
    },
    "SendGrid": {
      "ApiKey": "secret"
    }
  }

}
