@model BeckmanCoulter.BookStore.DbEntity.Book

@{
  ViewData["Title"] = "Delete";
  ViewData["Route"] = "book";
  Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
  <h1 style="margin-top: 10px; margin-bottom: 10px;">
    @Html.DisplayFor(model => model.Name)
  </h1>
  <div>
    <img src="@Url.Content(Model.Image)" style="width: 300px; border: 1px solid #DDD;" />
  </div>

  <form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <div style="margin-top: 20px;">
      <button type="submit" class="btn btn-danger">删除</button>
      <a href="/books/index" class="btn btn btn-light" role="button" aria-pressed="true">返回</a>
    </div>

  </form>
</div>
