@model BeckmanCoulter.BookStore.DbEntity.Book

@{
  ViewData["Title"] = "Edit";
  ViewData["Route"] = "book";
  Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row" style="margin-top: 20px;">
  <div class="col-md-4">
    <form asp-action="Edit">
      <div asp-validation-summary="ModelOnly" class="text-danger"></div>
      <input type="hidden" asp-for="Id" />
      <div class="form-group">
        <label asp-for="Name" class="control-label">名字</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
      </div>
      <div class="form-group">
        <label asp-for="Quantity" class="control-label">数量</label>
        <input asp-for="Quantity" class="form-control" />
        <span asp-validation-for="Quantity" class="text-danger"></span>
      </div>
      <div class="form-group">
        <label asp-for="Description" class="control-label">描述</label>
        <textarea asp-for="Description" class="form-control" rows="5"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
      </div>
      <div class="form-group">
        <input type="submit" value="修改" class="btn btn-success" />
        <a href="/books/index" class="btn btn btn-light" role="button" aria-pressed="true">返回</a>
      </div>
    </form>
  </div>
</div>
